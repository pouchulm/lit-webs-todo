<div class="container">
  <form  action="/tasks/<%= @task.id %>" method="post">
    <div class="controls">
      <div class="form-group">
        <input class="form-control input-lg" type="text" name="title" placeholder="タイトル" value="<%= CGI.escapeHTML(@task.title) %>"><br>
        <input class="form-control input-lg" type="text" name="due_date" placeholder="締切" value="<%= @task.due_date %>"><br>
        <select class="form-control" name="list">
          <%List.all.each do |list|%>
            <option value="<%=list.id%>"
              <% if list.id == @task.list.id %>
                selected
                <%end%>>
                <%=list.name%>
          </option>
          <%end%>
          </select>
      </div>
      <div class="form-group col-lg-4">
        <input class="form-control col-lg-4" type="submit" value="登録">
      </div>
    </div>
</div>